<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, input_html: { autocomplete: 'off' } %>
  <%= f.input :address, input_html: { autocomplete: 'off' } %>
  <%= f.input :phone_number, input_html: { autocomplete: 'off' } %>
  <%= f.select :category, options_for_select(["chinese", "italian", "japanese", "french", "belgian"])%>
  <%= f.submit %>
<% end %>
